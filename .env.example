# ========================================
# Flask Application Configuration
# ========================================
FLASK_APP=app.py
FLASK_ENV=development  # Options: development, testing, production
FLASK_DEBUG=1  # Set to 0 in production
FLASK_SECRET_KEY=change-this-to-a-secure-random-string

# Application URL (without trailing slash)
APP_URL=http://localhost:5000
APP_NAME="Artisan AI"

# ========================================
# Database Configuration
# ========================================
# SQLAlchemy database URI
# Format: postgresql://username:password@host:port/database
#         sqlite:///app.db
DATABASE_URL=sqlite:///app.db

# ========================================
# Firebase Configuration
# ========================================
# Frontend Firebase Config (from Firebase Console)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX  # Optional

# Firebase Admin SDK Service Account
# Either set the path to the service account JSON file:
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
# OR paste the entire JSON content (uncomment and update):
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type": "service_account", ...}'

# ========================================
# Google AI Configuration
# ========================================
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ========================================
# Email Configuration
# ========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USE_SSL=0
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
MAIL_DEBUG=0  # Set to 1 for verbose logging

# ========================================
# Security Configuration
# ========================================
# Password hashing salt
SECURITY_PASSWORD_SALT=change-this-to-a-secure-salt

# Rate limiting (format: "number per duration;...")
RATELIMIT_DEFAULT=200 per day;50 per hour

# CORS settings
CORS_ORIGINS=*  # In production, replace with specific origins

# ========================================
# Feature Flags
# ========================================
# Enable/disable features
FEATURE_MAIL_ENABLED=1
FEATURE_ANALYTICS=0
FEATURE_MAINTENANCE_MODE=0

# ========================================
# Third-Party Services
# ========================================
# Google Maps API (optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Sentry (error tracking - optional)
# SENTRY_DSN=your-sentry-dsn

# Stripe (payments - optional)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...

# ========================================
# Development Settings
# ========================================
# Set to 1 to enable debug toolbar
DEBUG_TOOLBAR_ENABLED=0

# Set to 1 to enable SQL query logging
SQLALCHEMY_ECHO=0

# ========================================
# Admin User
# ========================================
# Initial admin user (will be created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password
ADMIN_NAME=Admin User
