{
  "version": 2,
  "builds": [
    {
      "src": "vercel_entrypoint.py",
      "use": "@vercel/python"
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/app/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/vercel_entrypoint.py"
    }
  ],
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "0",
    "PYTHONUNBUFFERED": "true"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  }
}