{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "app/__init__.py",
          "app/api/__init__.py",
          "app/api/routes.py",
          "app/auth/__init__.py",
          "app/auth/routes.py",
          "app/models.py",
          "app/utils.py",
          "templates/**/*.html",
          "config.py",
          "requirements-vercel.txt"
        ]
      }
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/app/static/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ],
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "0",
    "PYTHONUNBUFFERED": "true",
    "PYTHONPATH": "/var/task:/var/task/app",
    "GUNICORN_CMD_ARGS": "--workers=1 --threads=4 --worker-class=gevent --timeout 300 --keep-alive 120",
    "GOOGLE_APPLICATION_CREDENTIALS": "./firebase-service-account.json"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9",
      "NODE_VERSION": "16.x"
    }
  },
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 300,
      "runtime": "python3.9",
      "handler": "handler"
    }
  },
  "regions": ["sin1"],
  "public": false,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ]
}